<resources>

    <!-- Base application theme. -->
    <style name="zxing_CaptureTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen" />

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorIcons">@color/lightlightblue</item>
        <item name="colorGeneratorIcons">?attr/colorIcons</item>
        <item name="colorHistoryIconBackground">@color/white</item>
        <item name="colorHistoryIcons">?attr/colorIcons</item>
        <item name="colorHighlight">@color/highlight_transparent_light</item>
        <item name="colorSelectableItemHighlight">@color/highlight_selectable_transparent_dark</item>
        <item name="colorNavbarHeaderBackground">@color/white</item>
        <item name="colorNavbarHeaderText">@color/colorPrimary</item>
        <item name="colorURLHighlight">@color/black</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.CustomMaterialDialog</item>
        <item name="materialCardViewStyle">@style/AppTheme.MaterialComponents.CardView</item>
    </style>

    <style name="AppTheme.CustomMaterialDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.AppBarTransparent" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">@color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlayTransparent" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorBackgroundFloating">@color/transparent</item>
        <item name="background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">?attr/colorNavbarHeaderBackground</item>
        <item name="itemTextColor">?attr/colorOnBackground</item>
        <item name="itemIconTint">?attr/colorOnBackground</item>
        <item name="itemShapeFillColor">?attr/colorSelectableItemHighlight</item>
    </style>

    <style name="AppTheme.Button.ExtendedFloatingActionButton.Base" parent="AppTheme">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="AppTheme.Button.GenerateButton" parent="AppTheme.Button.ExtendedFloatingActionButton.Base">
        <item name="android:id">@id/btnGenerate</item>
        <item name="android:text">@string/generate</item>
        <item name="icon">@drawable/ic_baseline_qr_code_24dp</item>
    </style>

    <style name="AppTheme.Generator.Icon" parent="AppTheme">
        <item name="tint">?attr/colorGeneratorIcons</item>
    </style>

    <style name="AppTheme.MaterialComponents.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardForegroundColor">@color/card_view_foreground</item>
        <item name="rippleColor">@color/card_view_ripple</item>
    </style>

    <style name="AppTheme.Generator.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="AppTheme.Generator.TextInputLayout.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense" />

    <style name="AppTheme.Generator.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />

</resources>
